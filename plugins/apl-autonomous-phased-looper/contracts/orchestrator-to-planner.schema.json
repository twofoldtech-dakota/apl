{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/twofoldtech-dakota/apl/contracts/orchestrator-to-planner.schema.json",
  "title": "OrchestratorToPlannerInput",
  "description": "Input contract for the planner agent. Contains the user's goal along with learned patterns and project context.",
  "type": "object",
  "required": ["goal"],
  "properties": {
    "goal": {
      "type": "string",
      "minLength": 1,
      "description": "The user's coding goal to be decomposed into tasks"
    },
    "learned_patterns": {
      "type": "array",
      "items": { "$ref": "_definitions.schema.json#/$defs/SuccessPattern" },
      "default": []
    },
    "anti_patterns": {
      "type": "array",
      "items": { "$ref": "_definitions.schema.json#/$defs/AntiPattern" },
      "default": []
    },
    "project_context": {
      "$ref": "_definitions.schema.json#/$defs/ProjectContext"
    }
  },
  "examples": [
    {
      "goal": "Build REST API with JWT authentication",
      "learned_patterns": [
        {
          "id": "sp_auth_jwt_001",
          "task_type": "authentication",
          "approach": "Use short-lived access tokens with refresh tokens"
        }
      ],
      "project_context": {
        "framework": "Express",
        "language": "TypeScript"
      }
    }
  ]
}
