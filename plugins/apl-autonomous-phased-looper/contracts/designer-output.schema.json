{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "designer-output.schema.json",
  "title": "DesignerOutput",
  "description": "Output contract for designer agent",
  "type": "object",
  "required": ["status"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "needs_mcp", "needs_input", "failure"],
      "description": "Outcome status of the design operation"
    },
    "mcp_available": {
      "type": "boolean",
      "description": "Whether Pencil.dev MCP was available"
    },
    "mcp_setup_required": {
      "type": "object",
      "description": "Present when status is needs_mcp",
      "properties": {
        "instructions": {
          "type": "string",
          "description": "Human-readable setup instructions"
        },
        "steps": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Step-by-step setup guide"
        },
        "download_url": {
          "type": "string",
          "format": "uri",
          "description": "URL to download Pencil.dev"
        },
        "documentation": {
          "type": "string",
          "format": "uri",
          "description": "Link to documentation"
        }
      }
    },
    "design": {
      "type": "object",
      "description": "Design output",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["component", "page", "layout", "system"]
        },
        "name": {
          "type": "string",
          "description": "Name of the designed element"
        },
        "tokens": {
          "type": "object",
          "description": "Design tokens used/created"
        },
        "variants": {
          "type": "object",
          "description": "Component variants if applicable",
          "additionalProperties": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "states": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Component states defined"
        },
        "specifications": {
          "type": "object",
          "description": "Detailed design specifications",
          "properties": {
            "dimensions": { "type": "object" },
            "spacing": { "type": "object" },
            "colors": { "type": "object" },
            "typography": { "type": "object" },
            "interactions": { "type": "object" }
          }
        },
        "layout": {
          "type": "object",
          "description": "Layout specifications for pages/layouts",
          "properties": {
            "grid": { "type": "object" },
            "sections": { "type": "array" },
            "breakpoints": { "type": "object" }
          }
        },
        "accessibility": {
          "type": "object",
          "properties": {
            "wcag_level": { "type": "string" },
            "contrast_ratios": { "type": "object" },
            "focus_indicators": { "type": "boolean" },
            "aria_requirements": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "generated_code": {
      "type": "object",
      "description": "Code artifacts generated from design",
      "properties": {
        "tailwind_config": {
          "type": "string",
          "description": "Tailwind config additions"
        },
        "css": {
          "type": "string",
          "description": "Raw CSS output"
        },
        "component_types": {
          "type": "string",
          "description": "TypeScript interface definitions"
        },
        "component_spec": {
          "type": "object",
          "description": "Component specification object"
        }
      }
    },
    "design_files": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Paths to created/modified design files"
    },
    "fallback_output": {
      "type": "object",
      "description": "Output when MCP not available",
      "properties": {
        "description": { "type": "string" },
        "tokens": { "type": "object" },
        "component_specs": { "type": "object" },
        "suggested_libraries": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Suggested component libraries to use"
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Design recommendations and next steps"
    },
    "error": {
      "type": "object",
      "description": "Error details if status is failure",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": { "type": "string" }
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "question": { "type": "string" },
          "options": { "type": "array", "items": { "type": "string" } }
        }
      },
      "description": "Questions for user when status is needs_input"
    }
  }
}
