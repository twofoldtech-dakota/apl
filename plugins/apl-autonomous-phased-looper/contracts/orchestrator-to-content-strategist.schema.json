{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "orchestrator-to-content-strategist.schema.json",
  "title": "OrchestratorToContentStrategist",
  "description": "Input contract for content strategist agent - defines the structure of content generation and audit requests",
  "type": "object",
  "required": ["content_type", "requirements"],
  "properties": {
    "content_type": {
      "type": "string",
      "enum": ["blog_post", "landing_page", "technical_doc", "email", "social_media", "marketing_copy", "faq"],
      "description": "Type of content to generate or audit"
    },
    "action": {
      "type": "string",
      "enum": ["generate", "audit", "optimize"],
      "default": "generate",
      "description": "Action to perform on content"
    },
    "context": {
      "type": "object",
      "description": "Contextual information for content generation",
      "properties": {
        "brand_voice": {
          "$ref": "#/$defs/BrandVoice"
        },
        "target_audience": {
          "type": "string",
          "description": "Description of the intended audience"
        },
        "primary_keywords": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Main keywords to target for SEO"
        },
        "secondary_keywords": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Supporting keywords and variations"
        },
        "content_goals": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["inform", "convert", "engage", "educate", "entertain", "persuade"]
          },
          "description": "Goals the content should achieve"
        },
        "competitors": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Competitor URLs or content to differentiate from"
        },
        "internal_links": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Internal pages to link to"
        }
      }
    },
    "requirements": {
      "type": "object",
      "required": ["topic"],
      "properties": {
        "topic": {
          "type": "string",
          "description": "Main topic or subject of the content"
        },
        "file_path": {
          "type": "string",
          "description": "Path to existing file (for audit action)"
        },
        "word_count_target": {
          "type": "integer",
          "minimum": 100,
          "maximum": 10000,
          "default": 1500,
          "description": "Target word count for generated content"
        },
        "include_structured_data": {
          "type": "boolean",
          "default": true,
          "description": "Whether to include JSON-LD schema markup"
        },
        "structured_data_type": {
          "type": "string",
          "enum": ["Article", "FAQPage", "HowTo", "Product", "Organization", "LocalBusiness", "Event", "Recipe"],
          "description": "Specific schema type to use"
        },
        "accessibility_level": {
          "type": "string",
          "enum": ["WCAG_A", "WCAG_AA", "WCAG_AAA"],
          "default": "WCAG_AA",
          "description": "WCAG compliance level to target"
        },
        "include_meta_tags": {
          "type": "boolean",
          "default": true,
          "description": "Whether to generate meta title and description"
        },
        "output_format": {
          "type": "string",
          "enum": ["markdown", "mdx", "html", "json"],
          "default": "markdown",
          "description": "Output format for generated content"
        },
        "include_images": {
          "type": "boolean",
          "default": false,
          "description": "Whether to suggest image placements"
        }
      }
    },
    "existing_content": {
      "type": "string",
      "description": "Existing content to audit or optimize"
    },
    "patterns_to_apply": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Specific content pattern IDs to apply"
    }
  },
  "$defs": {
    "BrandVoice": {
      "type": "object",
      "description": "Brand voice configuration for consistent tone",
      "properties": {
        "tone": {
          "type": "string",
          "enum": ["professional", "casual", "technical", "friendly", "authoritative", "playful", "empathetic"],
          "description": "Overall tone of the content"
        },
        "personality_traits": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Brand personality characteristics"
        },
        "vocabulary_level": {
          "type": "string",
          "enum": ["simple", "moderate", "advanced", "technical"],
          "description": "Complexity of language to use"
        },
        "avoid_words": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Words and phrases to avoid"
        },
        "preferred_phrases": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Preferred words and phrases to use"
        },
        "formatting_preferences": {
          "type": "object",
          "properties": {
            "use_contractions": { "type": "boolean" },
            "use_emojis": { "type": "boolean" },
            "sentence_length": { "type": "string", "enum": ["short", "medium", "varied"] },
            "paragraph_length": { "type": "string", "enum": ["short", "medium", "long"] }
          }
        }
      }
    }
  }
}
